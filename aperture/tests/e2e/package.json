{
  "name": "aperture-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Aperture using Puppeteer",
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:headed": "HEADLESS=false jest --config jest.config.js",
    "test:visual": "jest --config jest.config.js --testPathPattern=visual",
    "update:screenshots": "UPDATE_SCREENSHOTS=true jest --config jest.config.js --testPathPattern=visual"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/puppeteer": "^7.0.4",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "puppeteer": "^21.6.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
